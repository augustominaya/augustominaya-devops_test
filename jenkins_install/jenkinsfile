pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'cd packer_img/ && ./app_build.sh'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
               sh 'cd QA_EC2_code/ && ./app_test.sh'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying.....'
                sh 'cd Infra_pro_terraform/ && ./infra_build.sh'
            }
        }
    }
}